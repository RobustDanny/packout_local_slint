struct ResidentData{
    id: int,
    apt: string,
    first_name: string,
    last_name: string,
    linked: bool,
}

struct CardData{
    id: int,
    resident_id: int,
    apt: string,
    added_date: string,
    hash: string,
}

struct LogData{
    id: int,
    action_type: string,
    action: string,
    date_time: string,
}

struct Package {
    id: int,
    apt: string,
    package_number: string,
}

component CardItem inherits ElevatedCard {
    in property <string> title;
    in property <string> content;

    VerticalBox {
        padding: 10px;
        Text {
            font-weight: 700;
            text: title;
        }
        Text {
            text: content;
        }
    }
}

